body {
    padding: 0;
    margin: 0;
    background: #000000;
}

.Text-title {

  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  font-family: 'Bangers', cursive;
  padding: 0;
  margin: 0;

  font-size: 10vw;
  &.Text-Larger {
    font-size: 12vw;
  }
   -webkit-text-stroke: 1px black;
   color: white;
   text-shadow:
       3px 3px 0 #000,
     -1px -1px 0 #000,
      1px -1px 0 #000,
      -1px 1px 0 #000,
       1px 1px 0 #000;

}

.ImageList {

    display: block;

    margin: 0;
    padding: 0;

    /*display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;*/
}

.ImageList-item {
    position: relative;
    list-style: none;
    padding: 0;
    margin: 0;
    display: block;

    width: 20%;
    height: 0;
    padding-top: 20%;
    transform: translateY(250%);
    float: left;

    &:nth-child(1) {

        position: absolute;
        top:0;
        left: 0;
        width: 50%;
        padding-top: 50%;
        transform: translateY(0%);

    }

    &:nth-child(2) {

        position: absolute;
        top:0;
        left: 50%;
        width: 25%;
        padding-top: 25%;
        transform: translateY(0%);

    }

    &:nth-child(3) {

        position: absolute;
        top:0;
        left: 75%;
        width: 25%;
        padding-top: 25%;
        transform: translateY(0%);

    }

    &:nth-child(4) {

        position: absolute;
        top:0;
        left: 50%;
        width: 25%;
        padding-top: 25%;
        transform: translateY(100%);

    }

    &:nth-child(5) {

        position: absolute;
        top:0;
        left: 75%;
        width: 25%;
        padding-top: 25%;
        transform: translateY(100%);

    }

}

.ImageList-image,
.ImageList-video {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
}

.ImageList-link {
  outline: none;
  border: none;
  margin: none;
  padding: none;
  cursor: pointer;
}